{
  "name": "@kamva/ui-kit",
  "version": "0.2.4",
  "description": "## Installation ``` $ npm install --save-dev kamva-ui-kit ```",
  "main": "dist/index.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "build": "rollup -c rollup.config.js",
    "watch": "rollup -cw",
    "start": "parcel serve/index.html --out-dir build",
    "prepublish": "npm run build",
    "lint": "tslint --project ."
  },
  "keywords": [],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Kamva/kamva-ui-kit.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint"
    }
  },
  "devDependencies": {
    "@types/react": "^16.8.3",
    "@types/react-dom": "^16.8.2",
    "@types/styled-components": "^4.1.10",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "parcel": "^1.11.0",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-testing-library": "^5.8.0",
    "rollup": "^1.2.1",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-typescript2": "^0.19.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "polished": "^3.0.0",
    "styled-components": "^4.1.2"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(tsx|ts)?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "homepage": "https://github.com/Kamva/kamva-ui-kit#readme"
}
